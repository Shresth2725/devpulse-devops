pipeline {
    agent any

    stages {

        stage('Hello Jenkins') {
            steps {
                sh 'echo Jenkins is working'
            }
        }

        stage('Verify Ansible') {
            steps {
                sh 'ansible --version'
            }
        }

        stage('Deploy Backend') {
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh '''
                    ansible-playbook \
                    -i ansible/infra/inventory.ini \
                    ansible/infra/backend.yml \
                    --ssh-extra-args='-o StrictHostKeyChecking=no'
                    '''
                }
            }
        }
    }
}
