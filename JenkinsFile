pipeline {
    agent any

    environment {
        TRIGGER_REPO = ''
    }

    stages {

        stage('Detect Trigger Repo') {
            steps {
                script {
                    TRIGGER_REPO = env.repo_name ?: env.GIT_URL ?: ''
                    echo "Triggered by repo: ${TRIGGER_REPO}"
                }
            }
        }

        /*
         * =====================
         * CI STAGE (BACKEND)
         * =====================
         */

        stage('CI Backend') {
            when {
                expression {
                    return TRIGGER_REPO.contains('DevPulse')
                }
            }
            steps {
                dir('backend-ci') {
                    deleteDir()

                    git branch: 'main',
                        url: 'https://github.com/Shresth2725/DevPulse.git'

                    sh '''
                    echo "===== BACKEND CI START ====="

                    npm install --legacy-peer-deps

                    echo "Validating package.json"
                    node -e "require('./package.json')"

                    echo "Validating imports and runtime load"
                    node -e "
                    import('./src/app.js')
                        .then(() => console.log('Backend loaded successfully'))
                        .catch(err => {
                        console.error(err);
                        process.exit(1);
                        })
                    "

                    echo "===== BACKEND CI PASSED ====="
                    '''
                }
            }
        }

        /* =========================
         * CI â€” FRONTEND
         * ========================= */
        stage('CI Frontend') {
            when {
                expression {
                    return TRIGGER_REPO.contains('devpulse-frontend')
                }
            }
            steps {
                dir('frontend-ci') {
                    deleteDir()

                    git branch: 'main',
                        url: 'https://github.com/Shresth2725/devpulse-frontend.git'

                    sh '''
                    echo "===== FRONTEND CI START ====="

                    echo "Installing frontend dependencies"
                    npm install --legacy-peer-deps

                    echo "Building frontend"
                    npm run build

                    echo "===== FRONTEND CI PASSED ====="
                    '''
                }
            }
        }

        /*
         * =====================
         * DEPLOY BACKEND
         * =====================
         */

        stage('Deploy Backend') {
            when {
                expression {
                    return TRIGGER_REPO.contains('DevPulse')
                }
            }
            steps {
                sshagent(['ec2-ssh-key']) {
                    withCredentials([
                        string(credentialsId: 'DB_CONNECTION_STRING', variable: 'DB_CONNECTION_STRING'),
                        string(credentialsId: 'JWT_SECRET_KEY', variable: 'JWT_SECRET_KEY'),
                        string(credentialsId: 'PORT', variable: 'PORT'),
                        string(credentialsId: 'RAZORPAY_SECRET_KEY', variable: 'RAZORPAY_SECRET_KEY'),
                        string(credentialsId: 'RAZORPAY_KEY_ID', variable: 'RAZORPAY_KEY_ID'),
                        string(credentialsId: 'RAZORPAY_WEBHOOK_SECRET', variable: 'RAZORPAY_WEBHOOK_SECRET'),
                        string(credentialsId: 'CLOUD_NAME', variable: 'CLOUD_NAME'),
                        string(credentialsId: 'API_KEY', variable: 'API_KEY'),
                        string(credentialsId: 'API_SECRET', variable: 'API_SECRET')
                    ]) {
                        sh '''
                        ansible-playbook \
                          -i ansible/infra/inventory.ini \
                          ansible/infra/backend.yml \
                          --ssh-extra-args='-o StrictHostKeyChecking=no'
                        '''
                    }
                }
            }
        }

        /*
         * =====================
         * DEPLOY FRONTEND
         * =====================
         */

        stage('Deploy Frontend') {
            when {
                expression {
                    return TRIGGER_REPO.contains('devpulse-frontend')
                }
            }
            steps {
                sshagent(['ec2-ssh-key']) {
                    sh '''
                    ansible-playbook \
                      -i ansible/infra/inventory.ini \
                      ansible/infra/frontend.yml \
                      --ssh-extra-args='-o StrictHostKeyChecking=no'
                    '''
                }
            }
        }
    }
}
